<%- include ../admin_partials/admin_header %>

 <!-- Flash messages -->
 <div class="row mt-3 mb-3">
    <div class="col-md-12 m-auto">
      <% if (message.length > 0) { %>
      <div id="success" class="alert alert-success">
        <%= message %>
      </div>
      <% } %>
  </div>
  <div style="width: 50vw; margin-right : 20vw;">
<form method="POST" action="/admin/<% if (editing) { %>edit_category<% } else { %>add_category<% } %>"" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%=csrfToken %>">

    <div class="form-row align-items-center">
        <div class="col-6">
            <label for="exampleInputEmail1">Title</label>
            <input type="string" name="title" class="form-control" id="title" placeholder="Enter Title" value="<% if (editing) { %><%= category.title %><% } %>">
        </div>
        <div class="col-6">
          <label for="exampleInputEmail1">Category Code</label>
          <input type="string" name="categoryCode" class="form-control" id="categoryCode" placeholder="Enter Category Code" value="<% if (editing) { %><%= category.categoryCode %><% } %>">
        </div>
        <div class="col-6">
          <label for="imagefile" class="form-label">Image</label>
          <input type="file" name="imagefile" multiple class="form-control" id="file" value="<% if (editing) { %> <%= category.imagePath.secure_url %> <% } %>">
          <% if (editing) { %>
              <img src="<%= category.imagePath.secure_url %>" width="100" height="100">
              <% } %>
        </div>
        <% if (editing) { %>
            <input type="hidden" value="<%= category._id %>" name="categoryID">
            <% } %>

        <button type="submit" class="btn btn-primary"><% if (editing) { %>Update Category<% } else { %>Add
            Category<% } %></button>
    
  </form>
</div>
  
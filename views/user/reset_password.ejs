<%- include ../partials/new_header %>


<div>
  <!-- Start All Pages -->
	<div class="all-page-title page-breadcrumb">
		<div class="container text-center">
			<div class="row">
				<div class="col-lg-12">
           <h1 class="mt-4 mb-4">Reset Password</h1>
        </div>
			</div>
		</div>
	</div>
  <div class="row">
    <div class="col-md-8 m-auto">
      <!-- Flash message -->
      <div class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
          <% if (message.length > 0) { %>
          <div id="success" class="alert alert-success">
            <%= message %>
          </div>
          <% } %>
        </div>
      </div>
      <br>
      <br>
      <form action="/user/reset_password" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken %>">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="email" id="email" />
        </div>
        <div class="form-group">
          <label for="email">OTP</label>
          <input type="otp" class="form-control" name="otp" id="email" required/>
        </div>
        <div class="form-group">
          <label for="email">Enter New Password</label>
          <input type="password" class="form-control" name="newPassword" id="password" />
        </div>
        <div class="row mt-2 mr-auto">
            <div class="col-md-11 col-sm-12 m-auto">
                <button type="submit" class="btn btn-primary button-style">
                    Update Password
                </button>
            </div>
          </div>
      </form>
    </div>
  </div>
</div>
<br>
<br>
<hr>

<%- include ../partials/new_footer %>

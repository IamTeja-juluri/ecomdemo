<%- include ../partials/new_header %>


<div>
  <!-- Start All Pages -->
	<div class="all-page-title page-breadcrumb" style="height: 100px;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-4 mb-4">Forget Password</h1>
            </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 m-auto">
      <!-- Flash message -->
      <div class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
          <% if (message.length > 0) { %>
          <div id="success" class="alert alert-success">
            <%= message %>
          </div>
          <% } %>
        </div>
      </div>
      <br>
      <br>
      <form action="/user/forget_password" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken %>">
        <div class="form-group">
          <label for="email"><h3>Email address</h3></label>
          <input type="email" class="form-control" name="email" id="email" />
        </div>
        <button type="submit" class="btn btn-primary button-style">
            Password Reset
        </button>
      </form>
    </div>
  </div>
</div>
<br>

<%- include ../partials/new_footer %>

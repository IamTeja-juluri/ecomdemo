<%- include ../partials/new_header %>


<div>
  <!-- Start All Pages -->
  <div class="all-page-title page-breadcrumb" style="height: 200px;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-4 mb-4">Sign In</h1>
            </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 m-auto">
      <!-- Flash message -->
      <div class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
          <% if (message.length > 0) { %>
          <div id="success" class="alert alert-success">
            <%= message %>
          </div>
          <% } %>
        </div>
      </div>
      <% if(errorMsg !=null && errorMsg.length>0) {%>
      <div id="flash-msg" class="alert alert-danger">
        <%=errorMsg %>
      </div>
      <%}%>
      <br>
      <br>
      <form action="/user/signin" method="POST">
        <div class="form-group">
          <label for="email"><h3>Email address</h3></label>
          <input type="email" class="form-control" name="email" id="email" />
        </div>
        <div class="form-group">
          <label for="password"><h3>Password</h3></label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
          />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="btn btn-primary button-style">
          Sign In
        </button>
      </form>
      <p class="mt-3"><strong>
        Don't have an account? <a href="/user/signup"> Sign Up! </strong></a>
      </p>
      <p class="mt-3"><strong>
        Forget Password? <a href="/user/forget_password"> Reset Password </strong></a>
      </p>
    </div>
  </div>
</div>

<%- include ../partials/new_footer %>

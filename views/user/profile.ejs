<%- include ../partials/new_header %>

<div>
  <!-- Start All Pages -->
  <div class="all-page-title page-breadcrumb" style="height: 200px;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-4 mb-4">My orders </h1>
            </div>
        </div>
    </div>
  </div>
  <!-- Flash messages -->
  <div class="row mt-3 mb-3">
    <div class="col-md-8 m-auto">
      <% if (successMsg) { %>
      <div id="success" class="alert alert-success">
        <%= successMsg %>
      </div>
      <% } else { %>
      <div id="success" class="alert alert-success d-none"></div>
      <% } %>
    </div>
    <div class="col-md-8 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  <!-- User's orders -->
  
  <div class="row mt-4">
    <div class="col-md-8 m-auto">
      <% if (orders != null && orders.length > 0) { %>
      <% orders.forEach( order => { %>
      <div class="card m-3">
        <div class="card-body">
          <p class="card-text ">
            <ul class="list-group">
              <% order.cart.items.forEach( item => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong><%= item.title %> | <%= item.qty %> Units </strong>
                <br>
                <strong>Created At <%= order.createdAt.toLocaleDateString() %></strong>
                <br>
                <strong>
                  Shipping Info: 
                  <%= order.shippingInfo.street %><br>
                  City: <%= order.shippingInfo.city %><br>
                  Phone No: <%= order.shippingInfo.phoneNo %><br>
                  Pin Code: <%= order.shippingInfo.pinCode %><br>
                  State: <%= order.shippingInfo.state %>
                </strong>
                <span class="badge badge-info badge-pill"><%= item.price %></span>
              </li>
              <%}) %>
            </ul>
          </p>
        </div>
        <div class="card-footer">
          <strong>Total Price: Rs <%= order.cart.totalCost %></strong>
        </div>
      </div>
      <%}) %>
      <%} else { %>
        <h3 class="text-center" >You have not made any orders yet</h3>
      <%} %>
    </div>
  </div>
</div>

<%- include ../partials/new_footer %>

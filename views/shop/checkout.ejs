<%- include ../partials/new_header %> 
<div >
  
  <!-- Start All Pages -->
	<div class="all-page-title page-breadcrumb" style="height: 10px;">
		<div class="container text-center" style="margin: 0 auto;">
			<div class="row">
				<div class="col-lg-12">
           <h1 class="mt-4 mb-4">Checkout</h1>
        </div>
			</div>
		</div>
	</div>

<!-- Flash messages -->
  <div class="row mt-3 mb-3">
    <div class="col-md-8 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>

      
<div class="col-md-8 m-auto">
  <form id="paymentVerifyForm" action="/order" method="POST">
    <input type="hidden" name="_csrf" value="<%=csrfToken %>">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="Street"><strong>Street</strong></label>
          <input type="text" id="address" class="form-control" required name="street" />
        </div>
      </div>
      <div class="form-group row col-md-12">
        <div class="col-md-4">
          <label for="city"><strong>City</strong></label>
          <input type="text" id="city" class="form-control" required name="city">
        </div>
        <div class="col-md-4">
          <label for="state"><strong>State</strong></label>
          <input type="text" id="state" class="form-control" required name="state">
        </div>
        <div class="col-md-4">
          <label for="address"><strong>PinCode</strong></label>
          <input type="text" id="pincode" class="form-control" required name="pincode"/>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <label for="address"><strong>Phone</strong></label>
          <input
          type="text"
          id="phone_no"
          class="form-control"
          required
          name="phone_no"
          />
        </div>
      </div>
      <div class="col-md-12 text-center">
        <div class="form-group">
          <button class="btn btn-dark button-style" type="submit" >Order</button>
        </div>
    </div>
    <!-- <input name="razorpay_payment_id" type="hidden" id="razorpay_payment_id" />
    <input name="razorpay_order_id" type="hidden" id="razorpay_order_id"/>
    <input name="razorpay_signature" type="hidden" id="razorpay_signature"/> -->
  </form>
</div>
</div>

<div class="row mt-2 mr-auto" style= "width: 10%; margin: 0 auto;">

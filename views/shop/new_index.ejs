<%- include ../partials/new_header %>

<div>
  

  <!-- Start All Pages -->
  <div class="all-page-title page-breadcrumb" style="background-image: url('<%= pageName === 'All Products' ? '/images/AllProducts.png' : '/images/AllCategories.jpg' %>'); height: 500px; background-size: contain; background-repeat: no-repeat; background-position: center;">
    <div class="container text-center">
			<div class="row">
				<div class="col-lg-12">
                <% if(pageName == 'All Products') { %>
                    <h1><%=pageName%></h1>
                    <%} else {%> <%categories.forEach( category => {%> <%if(pageName ==
                    category.title){%>
                    <h1><%=pageName%></h1>
                    <%}%> <%})%> <%}%>
				</div>
			</div>
		</div>
	</div>
	<!-- End All Pages -->
	
<!-- Flash messages -->
<% if(successMsg || errorMsg) {%>
  <div class="row mt-3 mb-3">
    <div class="col-md-12 m-auto">
      <% if (successMsg) { %>
      <div id="success" class="alert alert-success">
        <%= successMsg %>
      </div>
      <% } else { %>
      <div id="success" class="alert alert-success d-none"></div>
      <% } %>
    </div>
    <div class="col-md-12 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  <% } %>

	<!-- Start Gallery -->
	<div class="gallery-box">
		<div class="container-fluid">
			<div class="tz-gallery">
				<div class="row">
          <% products.forEach((product) => { %>
					<div class="col-sm-12 col-md-4 col-lg-4">
						<a class="lightbox" href="/products/detail/<%=product._id%>">
							<img class="img-fluid" src="<%= product.imagePath.secure_url %>"  style="width: 200px; height: 200px;" alt="Gallery Images">
						</a>
            <div class="product-info">
                <h2><%= product.title %></h2>
                <h3 class="price">Rs <%= product.price %></h3>
              </div>
              <% if(product.available) {%>
                <a href="/add-to-cart/<%=product._id%>" class="btn btn-block btn-secondary button-style mt-auto mb-2 d-flex justify-content-center align-items-center" style="width: 200px; height: 50px;">
                  Add to Shopping Cart
                </a>
              <% } else { %>
                <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2" >
                  Sold out
                </a>
              <%} %>
					</div>
          <% }) %>
				</div>
			</div>
		</div>
	</div>
	<!-- End Gallery -->
</div>

<%- include ../partials/new_footer %>
<%- include ../partials/new_header %>
<div>
  <!-- Start All Pages -->
  <div class="all-page-title page-breadcrumb" style="height: 200px;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mt-4 mb-4">Shopping Cart</h1>
            </div>
        </div>
    </div>
  </div>
  <% if (cart != null && !cart.paid ) { %>
  <div class="row">
    <div class="col-md-11 col-sm-12 m-auto table-responsive">
      <table class="table text-center">
        <thead>
          <tr >
            <th>Product</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>Quantity</th>
            <th>&nbsp;</th>
            <th>Total</th>
            <th>Subtotal</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% if(products) {%>
          <% products.forEach( product => { %> <% if(product != null) {%>
          <tr class="my-auto">
            <td>
              <a
              href="/products/detail/<%=product._id%>"
            >
              <img style="height: 200px; width: 70%;" src="<%=product.imagePath.secure_url %>" class="img-small image-fluid" alt="image thumbnail" />
              </a>
            </td>
            <td>
              <div class="float-left mb-3">
                <a class="title-link"
                href="/products/detail/<%=product._id%>"
              >
              <h4 class="logo-title"><strong><%= product.title %></strong></h4>
              <h4 class="logo-title"><strong>Product No: <%= product.productCode %></strong></h4>
              </div>
              
              </a>
            </td>
            <td class="text-center">
              <a href="/add-to-cart/<%=product._id%>"
                ><img src="/images/plus-key.png" width="30" height="30"> </img></a>
            </td>
            <td class="text-center">
              <h4 class="logo-title"><strong><p class="qty-display pt-1"> <%= product.qty %> </p></strong></h4>
            </p>
          </td>
            <td class="text-center" >
              <a href="/reduce/<%=product._id%>"
                ><img src="/images/minus-key.png" width="30" height="30"> </img></a>
            </td>
            <td><strong>Rs <%= product.price %></strong></td>
            <td><strong>Rs <%= product.totalPrice %></strong></td>
            <td>
              <a
                href="/removeAll/<%=product._id%>"
                class="btn btn-danger btn-sm button-style-danger"
                >Remove all</a
              >
            </td>
          </tr>
          <% } %> <% }) %>
           <% } %>
        </tbody>
      </table>
    </div>
  </div>
<hr>
<div style="width: 10%; margin: 0 auto;">
  <div class="row mt-4 mr-auto">
    <div class="col-md-11 col-sm-12 m-auto">
      <h2><strong>Total: <%= cart.totalCost %> Rs </strong></h2>
    </div>
  </div>
  <div class="row mt-2 mr-auto">
    <div class="col-md-11 col-sm-12 m-auto">
      <a href="/checkout" class="btn btn-dark button-style">Checkout</a>
    </div>
  </div>
  <% } else { %>
  <div class="row text-center">
    <div class="col-md-9 col-sm-9 m-auto">
      <h2>No items in the cart</h2>
    </div>
  </div>
  <% } %>
</div>
</div>
<br>
<br>
<br>

<%- include ../partials/new_footer %>

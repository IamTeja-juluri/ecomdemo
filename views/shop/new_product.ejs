<%- include ../partials/new_header %> 



<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb" style="height: 400px;">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Product Info</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->

<!-- Flash messages -->
<div class="row mt-3 mb-3">
  <div class="col-md-12 m-auto">
    <% if (successMsg) { %>
    <div id="success" class="alert alert-success">
      <%= successMsg %>
    </div>
    <% } else { %>
    <div id="success" class="alert alert-success d-none"></div>
    <% } %>
  </div>
  <div class="col-md-12 m-auto">
    <% if (errorMsg) { %>
    <div id="error" class="alert alert-danger">
      <%= errorMsg %>
    </div>
    <% } else { %>
    <div id="error" class="alert alert-danger d-none"></div>
    <% } %>
  </div>
</div>

<!-- Product info -->
<div class="row mt-4 mb-4">
    <div class="col-md-5 mt-2 mr-2 ml-auto">
      <img
        src="<%=product.imagePath.secure_url %>"
        class="img-fluid product-img"
        alt="product image"
      />
    </div>
    <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
      <h1><%=product.title%></h1>
      <hr />
      <h4 class="logo-title">Rs <%=product.price%></h4>
      <p class="lead"> Description: 
          <h4 class="logo-title"><p><%=product.description%></p></h4>
        </p>
        
      <h4 class="logo-title"><strong>Category:</strong> <%=product.category.title%></h4>
      <h4 class="logo-title"><strong>Brand: </strong><%=product.manufacturer%></h4>
      <h4 class="logo-title"><strong>Product code:</strong> <%=product.productCode%></h4>
      
      <% if(product.available) {%>
      <p class="btn btn-block">In stock</p>
      <a href="/add-to-cart/<%=product._id%>" class="btn btn-block btn-secondary mt-3 mb-3 button-style">
        Add to Shopping Cart
      </a>
      <% } else { %>
      <p class="btn btn-block">Sold out</p>
      <%} %>
    </div>
  </div>

</div>

<%- include ../partials/new_footer %>
